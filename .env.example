#########################################
# App Configuration
#########################################

APP_NAME="PopDropkick API"
APP_ENV=local
APP_KEY=              # Run `php artisan key:generate` to populate
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

#########################################
# Logging
#########################################

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

#########################################
# Database (Default: SQLite for local dev)
#########################################

DB_CONNECTION=sqlite
# For MySQL, uncomment and configure below:
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=popdropkick
# DB_USERNAME=root
# DB_PASSWORD=

#########################################
# Cache, Session, Queue
#########################################

CACHE_STORE=database
# CACHE_PREFIX=popdropkick_

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_DOMAIN=null

QUEUE_CONNECTION=database

#########################################
# Filesystem
#########################################

FILESYSTEM_DISK=local

